/** This is an example to test UCLID5's invariant synthesis.
  */

module main
{
  synthesis function h(x : integer, y : integer, z : boolean) : boolean;
  var x, y : integer;
  var a    : boolean;
  
  init {
    x = 0;
    y = 1;
    havoc a;
  }
  
  next {
    if (a) {
      x' = x + 1;
      y' = x + y;
    }
  }
  
  invariant always_positive: (y >= 0);
  invariant hole: h(x, y, a);
  
  control {
    induction;
    check;
  }
}
