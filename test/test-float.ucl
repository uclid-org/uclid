module main
{
  var x : float;
  var y : float;
  var z : float;
  var w : float;
  var q : float;

  init {
    x = 0.0;
    y = 0.0; // test assign
    assume(z==w); // test assume

  }

  next {
    x' = y + 1.0;
    y' = y - 1.0;
    assume(q > 0.0);
    q' = 2.0 *q;
    assert(isNan(q));
    assert(q' < q); // should fail
  }

  invariant myinv:  x!=y; // should fail induction
  invariant inv2: z > w; // should fail
  invariant inv3: w < z;  // should fail


  control {
    f = induction;
    check;
    print_results;
  }
}
