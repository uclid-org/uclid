module main
{
    type color_t = enum { red, blue };

    var red_cnt : integer;
    var color : color_t;

    procedure next_color()
      modifies color;
    {
      color = blue;
      if (red_cnt > 0) {
        color = red;
      }
      if(color == red) {
        assert (red_cnt > 0);
      }
    }

	init { }
	
    next {
      call next_color();
    }

    control {
        x = unroll(1);
        check;
        // print_results;
    }
}
