module main
{
  var n : bv8;
  var s : bv8;
  var b : boolean;
  
  init {
    b = false;
    n = 0bv8;
    s = 0bv8;
  }
  
  next {
    n' = if (b) then (n + 1bv8) else (n + 2bv8);
    // noteToSelf(ReorderingTest)
    if (b) {
      s' = s + 1bv8;
    } else {
      s' = s + 2bv8;
    }
  }
  
  invariant[LTL] s_eq_n : G(s == n);
  invariant[LTL] s_eq_n_plus_1 : G(s == (n+1bv8));

  control {
    bmc(25);
    check;
    print_results;
  }
}
