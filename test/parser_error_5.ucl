module main
{
    var x:integer;
    var y:integer;
    var z:integer;
    init {
    }
    next {
        x' = x + 1;
        y' = x' + 1;
        z' = z + y';
    }

    invariant x_gt_0: x > 0
    invariant y_gt_0: y > 0;
    invariant z_gt_0: z > 0;

    control {
        v = induction[pre=[y_gt_0]; properties=[x_gt_0]];
        check;
        print_results;
    }
}