module sub {
  var b : record{s: integer};
  var a : integer;

  procedure [inline] mod(flag : boolean) 
    ensures(flag == false ==> a == old(a));
    modifies a;
  {
    if (flag == true) {
      a = 2;
    }
  }

}


module main {
  
  instance s : sub();
  
  procedure mod_sub() 
    modifies s;
  {
    call s.mod(false);
  }

    init {
    }

    next {

    }
  invariant myCheck: (s.b.s != 1000);

  control {
    verif_mod_sub = verify(mod_sub);
    check;
    print_module;
    print_results;
  }

}
