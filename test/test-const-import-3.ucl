module common {
  type word_t = bv8;
  const k0_word_t, k1_word_t : word_t;
  axiom k1_word_t == 1bv8;
}

module main {
  type * = common.*;
  const * = common.*;
  
  var sum : word_t;
  var num : word_t;

  init {
    sum = 1bv8;
    num = k1_word_t;
    assert (num == sum);
  }

  next {
    sum' = sum + 1bv8;
    num' = num + k1_word_t;
  }

  property sum_num : sum == num;

  control {
    // print_module;
    unroll(5);
    check;
    print_results;
    // print_cex(sum, num);
  }
}

