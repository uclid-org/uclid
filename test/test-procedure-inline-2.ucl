
module main {
    var v : integer;

  procedure [inline] incr()
  requires true;
  ensures true;
    modifies v;
    {
        assert(v==0);
    }

    procedure test()
    modifies v;
    {
        v = 0;
        call () = incr();
        assert(v==0);
    }

    control {
        v = verify(test); // 2 assertions should pass
        check;
        print_results;
    }
}

