// UCLID model with recursion.
// This is expected to fail compilation.

module main  {
  var x, y : integer;

  procedure foo(x : integer, y : integer) returns (z : integer) {
    if (x <= 0) {
      z = y;
    } else {
      call (z) = foo(x - 1, y+1);
    }
  }

  next {
    call (y) = foo(x, y);
  }
  
  control {
    print_module;
  }
}